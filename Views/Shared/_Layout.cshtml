@using System;
@using WesternPlains.App.Extensions;
@using Microsoft.AspNetCore.Http;

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>Western Plains Aviation -- @ViewData["Title"]</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/semantic/dist/semantic.css" />
        <link rel="stylesheet" href="~/css/quill.snow.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production,Release">
        <link rel="stylesheet" href="https://oss.maxcdn.com/semantic-ui/2.2.2/semantic.min.css"
              asp-fallback-href="~semantic/dist/semantic.min.css"
              asp-fallback-test-class="ui button" asp-fallback-test-property="cursor" asp-fallback-test-value="pointer" />
        <link href="https://cdn.quilljs.com/1.2.2/quill.snow.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <!-- Following Menu -->
    <div class="ui large top pointing fixed menu">
        <div class="ui container">
            <a class="toc item">
                <i class="sidebar icon"></i>
                <span class="sr-only">Toggle Navigation</span>
            </a>
            <menulink class="header item" asp-area="" controller-name="Home" action-name="Index" menu-text="Western Plains Aviation"></menulink>
            <menulink class="blue item" asp-area="" controller-name="Home" action-name="Index" menu-text="Home"></menulink>
            <menulink class="blue item" asp-area="" controller-name="Account" action-name="Index" menu-text="Dashboard"></menulink>
            <menulink class="blue item" asp-area="" controller-name="Application" action-name="TimeClock" menu-text="EZ Time Clock"></menulink>
            <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="POST" class="item">
                <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
            </form>
        </div>
    </div>

    <!-- Page Contents -->
    <div class="pusher">
        <div class="ui container content">
            @RenderBody()
        </div>
    </div>

    <environment names="Development">
        <script src="~/js/jquery.js"></script>
        <script src="~/semantic/dist/semantic.js"></script>
        <script src="~/js/quill.js"></script>
    </environment>
    <environment names="Staging,Production,Release">
        <script
            src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/semantic-ui/2.2.2/semantic.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-0XfhiWRXqhAYf5BFse4UCEkjECt8XD6jjNYREhYYI4ICheLSxfSaYbZn0y/29yO2">
        </script>
        <script src="https://cdn.quilljs.com/1.2.2/quill.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
